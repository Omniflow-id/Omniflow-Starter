# ====================================
# Omniflow-Starter Environment Template
# ====================================
# Copy this to .env and modify the values as needed

# Core Application Settings (REQUIRED)
NODE_ENV=development
PORT=1234
APP_URL=http://localhost
TIMEZONE=Asia/Jakarta

# Session & Security Configuration (REQUIRED)
SESSION_KEY=your-super-secret-session-key-change-this-in-production
CSRF_SECRET=your-csrf-secret-key-change-this
SESSION_TIMEOUT_HOURS=24

# Database Configuration (REQUIRED)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=omniflow_starter
DB_CONNECTION_LIMIT=50
DB_ACQUIRE_TIMEOUT=60000
DB_QUERY_TIMEOUT=60000

# Redis Configuration (Optional - Caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_USERNAME=
REDIS_MAX_RETRIES=5
REDIS_DEFAULT_TTL=3600
REDIS_KEY_PREFIX=starter:

# RabbitMQ Configuration (Optional - Job Queue)
RABBITMQ_ENABLED=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_MAX_RECONNECT_ATTEMPTS=10
RABBITMQ_RECONNECT_DELAY=1000
RABBITMQ_QUEUE_DURABLE=true
RABBITMQ_QUEUE_AUTO_DELETE=false
RABBITMQ_MESSAGE_PERSISTENT=true

# CORS Configuration (Optional)
CORS_ENABLED=false
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=86400
CORS_PREFLIGHT_CONTINUE=false
CORS_OPTIONS_SUCCESS_STATUS=204

# Compression Settings (Built-in)
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6
COMPRESSION_CHUNK_SIZE=16384
BROTLI_ENABLED=true
BROTLI_QUALITY=4
BROTLI_CHUNK_SIZE=16384

# Password Policy Configuration (Optional)
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MIN_SYMBOLS=1
PASSWORD_MIN_NUMBERS=1
PASSWORD_MAX_REPEATING=3
PASSWORD_FORBIDDEN_PATTERNS=password,123456,qwerty,admin

# Development Settings
DEV_2FA_BYPASS=true

# Email Notifications (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Your App Name
SMTP_FROM_EMAIL=noreply@yourcompany.com
EMAIL_QUEUE_TIMEOUT=150

# S3 File Storage (Optional)
S3_ENABLED=false
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=your-bucket-name
S3_FOLDER_NAME=uploads
S3_REGION=us-east-1

# JWT Authentication (Optional - API)
JWT_ENABLED=false
JWT_SECRET=your-jwt-secret-key-make-it-very-strong
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# BeepBot Critical Notifications (Optional)
BEEPBOT_ENABLED=false
BEEPBOT_SECRET=your-beepbot-secret
BEEPBOT_CHAT_ID=your-telegram-chat-id

# OpenTelemetry Monitoring (Optional)
MONITORING_ENABLED=false
OTEL_SERVICE_NAME=omniflow-starter
OTEL_SERVICE_VERSION=1.1.0
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://jaeger:4318/v1/traces
OTEL_METRICS_PORT=9091
OTEL_METRICS_ENDPOINT=/metrics

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log