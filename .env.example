# Core Application (REQUIRED)
NODE_ENV="development"
SESSION_KEY=""
APP_URL="http://localhost"
PORT="1234"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
TIMEZONE="Asia/Jakarta"

# Database Connection (REQUIRED)
DB_HOST=""
DB_USER=""
DB_PASSWORD=""
DB_NAME=""

# Database Connection Pool (OPTIONAL)
DB_CONNECTION_LIMIT=""  # Max connections (default: 10 dev, 50 prod)
DB_ACQUIRE_TIMEOUT=""   # Connection timeout in ms (default: 60000)
DB_QUERY_TIMEOUT=""     # Query timeout in ms (default: 60000)

# Password Policy Configuration (OPTIONAL)
PASSWORD_MIN_LENGTH=""           # Minimum password length (default: 8)
PASSWORD_MAX_LENGTH=""           # Maximum password length (default: 128)
PASSWORD_REQUIRE_UPPERCASE=""    # Require uppercase letters (default: true)
PASSWORD_REQUIRE_LOWERCASE=""    # Require lowercase letters (default: true)
PASSWORD_REQUIRE_NUMBERS=""      # Require numbers (default: true)
PASSWORD_REQUIRE_SYMBOLS=""      # Require special characters (default: true)
PASSWORD_MIN_SYMBOLS=""          # Minimum special characters (default: 1)
PASSWORD_MIN_NUMBERS=""          # Minimum numbers (default: 1)
PASSWORD_MAX_REPEATING=""        # Max consecutive identical chars (default: 3)
PASSWORD_FORBIDDEN_PATTERNS=""   # Comma-separated forbidden words (default: password,123456,qwerty,admin,user,omniflow)

# Security Configuration
CSRF_SECRET=""  # Falls back to SESSION_KEY if not set
SESSION_TIMEOUT_HOURS="24"

# Response Compression (Built-in feature)
COMPRESSION_ENABLED="true"
COMPRESSION_THRESHOLD="1024"
COMPRESSION_LEVEL="6"
COMPRESSION_CHUNK_SIZE="16384"

BROTLI_ENABLED="true"
BROTLI_QUALITY="4"
BROTLI_CHUNK_SIZE="16384"

# =================
# OPTIONAL FEATURES
# =================

# Redis Caching (OPTIONAL)
# Set REDIS_ENABLED=true to enable Redis features
REDIS_ENABLED="false"
REDIS_HOST=""
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_USERNAME=""

# Email Notifications (OPTIONAL)  
# Set EMAIL_ENABLED=true to enable email features
EMAIL_ENABLED="false"
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_NAME=""
SMTP_FROM_EMAIL=""

# S3 File Storage (OPTIONAL)
# Set S3_ENABLED=true to enable S3 features
S3_ENABLED="false"
S3_ENDPOINT_URL=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_BUCKET_NAME=""
S3_FOLDER_NAME=""
S3_REGION=""

# OpenTelemetry Monitoring (OPTIONAL)
# Set MONITORING_ENABLED=true for external monitoring
MONITORING_ENABLED="false"
OTEL_SERVICE_NAME="omniflow-starter"
OTEL_SERVICE_VERSION="1.0.0"
OTEL_METRICS_PORT="9091"
OTEL_METRICS_ENDPOINT="/metrics"
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=""

# JWT Authentication (OPTIONAL)
# Set JWT_ENABLED=true to enable JWT features
JWT_ENABLED="false"
JWT_SECRET=""
JWT_EXPIRES_IN="1h"
JWT_ALGORITHM="HS256"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS Configuration (OPTIONAL)
# Set CORS_ENABLED=true to enable CORS features
CORS_ENABLED="false"
CORS_ORIGIN=""  # Single: "https://yourdomain.com" or Multiple: "https://domain1.com,https://domain2.com,http://localhost:3000"
CORS_CREDENTIALS="true"