{
  "name": "omniflow-starter",
  "version": "1.1.0",
  "description": "Production-ready Node.js ERP starter with comprehensive user management, flexible permission system, enterprise-grade activity logging, Redis caching, RabbitMQ job queue, and S3 file storage",
  "main": "server.js",
  "scripts": {
    "start": "node --require ./instrument.js --no-deprecation server.js",
    "dev": "nodemon --exec \"node --require ./instrument.js --no-deprecation\" server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "biome check --write .",
    "lint": "biome lint .",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs omniflow-starter",
    "pm2:monitor": "pm2 monit",
    "pm2:status": "pm2 status",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f app",
    "docker:prod": "docker-compose up -d",
    "docker:prod:build": "docker-compose up -d --build",
    "docker:prod:down": "docker-compose down",
    "docker:prod:logs": "docker-compose logs -f app",
    "docker:clean": "docker system prune -af && docker volume prune -f",
    "setup:dev": "npm install && npm run docker:dev",
    "setup:prod": "npm ci --only=production && npm run docker:prod",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:status": "knex migrate:status"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "erp-starter",
    "rbac",
    "pbac",
    "user-management",
    "activity-logging",
    "redis-caching",
    "rabbitmq",
    "s3-storage",
    "rate-limiting",
    "csrf-protection",
    "enterprise-ready",
    "production-ready",
    "modular-architecture",
    "HRIS",
    "Stock Management",
    "Sales Management",
    "Accounting",
    "PoS",
    "CRM",
    "Project Management",
    "Analytics",
    "Administration"
  ],
  "author": "Eric Julianto",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.850.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.1",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "amqplib": "^0.10.8",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.3",
    "chokidar": "^3.6.0",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-mysql-session": "^3.0.3",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "langfuse": "^3.38.6",
    "marked": "^12.0.2",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "nodemailer": "^7.0.5",
    "nunjucks": "^3.2.4",
    "nunjucks-date-filter": "^0.1.1",
    "openai": "^6.18.0",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.7.0",
    "ua-parser-js": "^2.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2"
  },
  "_moduleAliases": {
    "@": ".",
    "@config": "./config",
    "@db": "./db",
    "@helpers": "./helpers",
    "@middlewares": "./middlewares",
    "@routes": "./routes",
    "@views": "./views",
    "@public": "./public"
  }
}
