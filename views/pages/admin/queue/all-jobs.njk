{% extends "layout/masterLayout.njk" %}

{% block title %}{{ t('pageTitle') }}{% endblock %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">{{ t('pageTitle') }}</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/admin">{{ t('sidebar.dashboard') }}</a></li>
    <li class="breadcrumb-item active">{{ t('pageTitle') }}</li>
  </ol>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <!-- Status Filter -->
      <div class="btn-group" role="group">
        <a href="?status=all" class="btn {% if currentStatus == 'all' %}btn-primary{% else %}btn-outline-primary{% endif %} btn-sm">
          {{ t('filters.all') }}
        </a>
        <a href="?status=pending" class="btn {% if currentStatus == 'pending' %}btn-warning{% else %}btn-outline-warning{% endif %} btn-sm">
          {{ t('filters.pending') }}
        </a>
        <a href="?status=processing" class="btn {% if currentStatus == 'processing' %}btn-info{% else %}btn-outline-info{% endif %} btn-sm">
          {{ t('filters.processing') }}
        </a>
        <a href="?status=completed" class="btn {% if currentStatus == 'completed' %}btn-success{% else %}btn-outline-success{% endif %} btn-sm">
          {{ t('filters.completed') }}
        </a>
        <a href="?status=failed" class="btn {% if currentStatus == 'failed' %}btn-danger{% else %}btn-outline-danger{% endif %} btn-sm">
          {{ t('filters.failed') }}
        </a>
      </div>
    </div>
    <div>
      <a href="/admin/queue" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>{{ t('buttons.back') }}
      </a>
    </div>
  </div>

  {% if error %}
  <div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle me-2"></i>{{ error }}
  </div>
  {% endif %}

  {% if jobs.length > 0 %}
  <div class="card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
          {% if currentStatus == 'all' %}
            {{ t('labels.allJobs') }} ({{ pagination.total }} {{ t('labels.total') }})
          {% else %}
            {{ t('status.' + currentStatus) }} {{ t('labels.jobs') }} ({{ pagination.total }} {{ t('labels.total') }})
          {% endif %}
        </h5>
        {% if currentStatus == 'failed' %}
        <form action="/admin/queue/retry" method="POST" class="d-inline">
          {{ csrfField() | safe }}
          <button type="submit" class="btn btn-warning btn-sm">
            <i class="fas fa-redo"></i> {{ t('buttons.retryFailed') }}
          </button>
        </form>
        {% endif %}
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table id="datatablesSimple" class="table table-striped" style="width: 100%">
          <thead>
            <tr>
              <th>{{ t('table.id') }}</th>
              <th>{{ t('table.status') }}</th>
              <th>{{ t('table.queue') }}</th>
              <th>{{ t('table.data') }}</th>
              <th>{{ t('table.attempts') }}</th>
              <th>{{ t('table.createdAt') }}</th>
              <th>{{ t('table.startedAt') }}</th>
              <th>{{ t('table.completedAt') }}</th>
              <th>{{ t('table.error') }}</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
  {% else %}
  <div class="card">
    <div class="card-body text-center py-5">
      <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
      <h4>{{ t('labels.noJobs') }}</h4>
      {% if currentStatus == 'all' %}
      <p class="text-muted">{{ t('messages.noJobsCreated') }}</p>
      {% else %}
      <p class="text-muted">{{ t('messages.noStatusJobs') | replace('{status}', currentStatus) }}</p>
      {% endif %}
      <a href="/admin/queue" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> {{ t('buttons.back') }}
      </a>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}

{% block scripts %}
<script>
  $(document).ready(function () {
    const currentStatus = '{{ currentStatus }}';
    const datatableLang = {
      search: '{{ t('datatable.search') }}',
      lengthMenu: '{{ t('datatable.lengthMenu') }}',
      info: '{{ t('datatable.info') }}',
      infoEmpty: '{{ t('datatable.infoEmpty') }}',
      infoFiltered: '{{ t('datatable.infoFiltered') }}',
      processing: '{{ t('datatable.processing') }}',
      loadingRecords: '{{ t('datatable.loadingRecords') }}',
      zeroRecords: '{{ t('datatable.zeroRecords') }}'
    };

    $("#datatablesSimple").DataTable({
      processing: true,
      serverSide: true,
      ajax: {
        url: '/api/datatable/jobs',
        type: 'GET',
        data: function(d) {
          d.status = currentStatus;
        }
      },
      columns: [
        { data: 0, name: 'id' },
        { data: 1, name: 'status' },
        { data: 2, name: 'queue' },
        {
          data: 3,
          name: 'data',
          orderable: false,
          searchable: false
        },
        { data: 4, name: 'attempts' },
        { data: 5, name: 'created_at' },
        { data: 6, name: 'started_at' },
        { data: 7, name: 'completed_at' },
        {
          data: 8,
          name: 'error',
          orderable: false,
          searchable: false
        }
      ],
      order: [[0, 'desc']],
      pageLength: 25,
      responsive: true,
      scrollX: true,
      columnDefs: [
        { className: "text-center", targets: [0, 1, 2, 4] }
      ],
      language: datatableLang
    });
  });
</script>
{% endblock %}
