{% extends "layout/masterLayout.njk" %}

{% block title %}Failed Jobs{% endblock %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">Failed Jobs</h1>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div></div>
    <div>
      <a href="/admin/queue" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Queue Stats
      </a>
    </div>
  </div>

      {% if failedJobs.length > 0 %}
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
              Failed Jobs ({{ pagination.total }} total)
            </h5>
            <form action="/admin/queue/retry" method="POST" class="d-inline">
              {{ csrfField() | safe }}
              <button type="submit" class="btn btn-warning btn-sm">
                <i class="fas fa-redo"></i> Retry Selected
              </button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped" style="width: 100%">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Queue</th>
                  <th>Data</th>
                  <th>Error</th>
                  <th>Attempts</th>
                  <th>Created</th>
                  <th>Next Retry</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
      {% else %}
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
          <h4>No Failed Jobs</h4>
          <p class="text-muted">All jobs are processing successfully!</p>
          <a href="/admin/queue" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Back to Queue Stats
          </a>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script>
  $(document).ready(function () {
    $("#datatablesSimple").DataTable({
      processing: true,
      serverSide: true,
      ajax: {
        url: '/api/datatable/failed-jobs',
        type: 'GET'
      },
      columns: [
        { data: 0, name: 'id' },
        { data: 1, name: 'queue' },
        { 
          data: 2, 
          name: 'data',
          orderable: false,
          searchable: false
        },
        { 
          data: 3, 
          name: 'error',
          orderable: false,
          searchable: false
        },
        { data: 4, name: 'attempts' },
        { data: 5, name: 'created_at' },
        { data: 6, name: 'retry_at' }
      ],
      order: [[5, 'desc']],
      pageLength: 25,
      responsive: true,
      scrollX: true,
      columnDefs: [
        { className: "text-center", targets: [0, 1, 4] }
      ],
      language: {
        search: "Search failed jobs:",
        lengthMenu: "Show _MENU_ failed jobs per page",
        info: "Showing _START_ to _END_ of _TOTAL_ failed jobs",
        infoEmpty: "No failed jobs found",
        infoFiltered: "(filtered from _MAX_ total failed jobs)",
        processing: "Processing...",
        loadingRecords: "Loading...",
        zeroRecords: "No matching failed jobs found"
      }
    });
  });
</script>
{% endblock %}
