{% extends "layout/masterLayout.njk" %}

{% block title %}{{ t('tabs.failedJobs') }}{% endblock %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">{{ t('tabs.failedJobs') }}</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/admin">{{ t('sidebar.dashboard') }}</a></li>
    <li class="breadcrumb-item"><a href="/admin/queue">{{ t('pageTitle') }}</a></li>
    <li class="breadcrumb-item active">{{ t('tabs.failedJobs') }}</li>
  </ol>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div></div>
    <div>
      <a href="/admin/queue" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>{{ t('buttons.back') }}
      </a>
    </div>
  </div>

      {% if failedJobs.length > 0 %}
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
              {{ t('labels.failedJobs') }} ({{ pagination.total }} {{ t('labels.total') }})
            </h5>
            <form action="/admin/queue/retry" method="POST" class="d-inline">
              {{ csrfField() | safe }}
              <button type="submit" class="btn btn-warning btn-sm">
                <i class="fas fa-redo"></i> {{ t('buttons.retrySelected') }}
              </button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped" style="width: 100%">
              <thead>
                <tr>
                  <th>{{ t('table.id') }}</th>
                  <th>{{ t('table.queue') }}</th>
                  <th>{{ t('table.data') }}</th>
                  <th>{{ t('table.error') }}</th>
                  <th>{{ t('table.attempts') }}</th>
                  <th>{{ t('table.createdAt') }}</th>
                  <th>{{ t('table.nextRetry') }}</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
      {% else %}
      <div class="card">
        <div class="card-body text-center py-5">
          <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
          <h4>{{ t('labels.noFailedJobs') }}</h4>
          <p class="text-muted">{{ t('messages.allSuccess') }}</p>
          <a href="/admin/queue" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> {{ t('buttons.back') }}
          </a>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script nonce="{{ cspNonce }}">
  $(document).ready(function () {
    const datatableLang = {
      search: '{{ t('datatable.searchFailed') }}',
      lengthMenu: '{{ t('datatable.lengthMenuFailed') }}',
      info: '{{ t('datatable.infoFailed') }}',
      infoEmpty: '{{ t('datatable.infoEmptyFailed') }}',
      infoFiltered: '{{ t('datatable.infoFilteredFailed') }}',
      processing: '{{ t('datatable.processing') }}',
      loadingRecords: '{{ t('datatable.loadingRecords') }}',
      zeroRecords: '{{ t('datatable.zeroRecords') }}'
    };

    $("#datatablesSimple").DataTable({
      processing: true,
      serverSide: true,
      ajax: {
        url: '/api/datatable/failed-jobs',
        type: 'GET'
      },
      columns: [
        { data: 0, name: 'id' },
        { data: 1, name: 'queue' },
        {
          data: 2,
          name: 'data',
          orderable: false,
          searchable: false
        },
        {
          data: 3,
          name: 'error',
          orderable: false,
          searchable: false
        },
        { data: 4, name: 'attempts' },
        { data: 5, name: 'created_at' },
        { data: 6, name: 'retry_at' }
      ],
      order: [[5, 'desc']],
      pageLength: 25,
      responsive: true,
      scrollX: true,
      columnDefs: [
        { className: "text-center", targets: [0, 1, 4] }
      ],
      language: datatableLang
    });
  });
</script>
{% endblock %}
