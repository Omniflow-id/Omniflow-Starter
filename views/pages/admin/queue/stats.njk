{% extends "layout/masterLayout.njk" %}

{% block title %}Queue Management{% endblock %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">Queue Management</h1>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
      <li class="breadcrumb-item active">Queue Management</li>
    </ol>
    <div>
      <a href="/admin/queue/failed" class="btn btn-outline-secondary">
        <i class="fas fa-exclamation-triangle me-1"></i>Failed Jobs
      </a>
    </div>
  </div>

  <!-- Connection Status -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-server me-1"></i>
          RabbitMQ Connection Status
        </div>
        <div class="card-body">
          {% if connectionStatus.connected %}
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-success me-2">
              <i class="fas fa-check-circle me-1"></i>Connected
            </span>
          </div>
          <p class="mb-0">
            <strong><i class="fas fa-toggle-on me-1"></i>Status:</strong><br />
            <span class="text-success">RabbitMQ is ready to process jobs</span>
          </p>
          {% else %}
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-danger me-2">
              <i class="fas fa-times-circle me-1"></i>Disconnected
            </span>
          </div>
          <div class="alert alert-warning mb-0">
            <i class="fas fa-exclamation-triangle me-1"></i>
            {% if connectionStatus.isReconnecting %}
              Attempting reconnection ({{ connectionStatus.reconnectAttempt }}/10)
            {% else %}
              RabbitMQ connection failed
            {% endif %}
          </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-chart-bar me-1"></i>
          Queue Statistics
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-danger mb-1">{{ stats.failed or 0 }}</h3>
                <p class="text-muted small mb-0">Failed</p>
              </div>
            </div>
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-warning mb-1">{{ stats.retrying or 0 }}</h3>
                <p class="text-muted small mb-0">Retrying</p>
              </div>
            </div>
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-success mb-1">{{ stats.completed or 0 }}</h3>
                <p class="text-muted small mb-0">Completed</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Queue Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="fas fa-cogs me-1"></i>
          Queue Management
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
              <div class="card bg-light">
                <div class="card-body text-center p-3">
                  <h6 class="card-title text-primary mb-3">
                    <i class="fas fa-play me-1"></i>Send Test Job
                  </h6>
                  <form method="post" action="/admin/queue/test" class="mb-0">
                    {{ csrfField() | safe }}
                    <button
                      type="submit"
                      class="btn btn-primary btn-sm w-100"
                      {% if not connectionStatus.connected %}disabled{% endif %}
                    >
                      <i class="fas fa-play me-1"></i>Send Test
                    </button>
                  </form>
                  <small class="text-muted mt-2 d-block">
                    Sends a test job to the worker
                  </small>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body text-center p-3">
                  <h6 class="card-title text-warning mb-3">
                    <i class="fas fa-redo me-1"></i>Retry Failed Jobs
                  </h6>
                  <form method="post" action="/admin/queue/retry" class="mb-0">
                    {{ csrfField() | safe }}
                    <button
                      type="submit"
                      class="btn btn-warning btn-sm w-100"
                      {% if stats.failed == 0 %}disabled{% endif %}
                    >
                      <i class="fas fa-redo me-1"></i>Retry All
                    </button>
                  </form>
                  <small class="text-muted mt-2 d-block">
                    Retry up to 10 failed jobs
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

      <!-- Recent Failed Jobs -->
      {% if recentFailedJobs and recentFailedJobs.length > 0 %}
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">ðŸ“‹ Recent Failed Jobs</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Queue</th>
                      <th>Status</th>
                      <th>Attempts</th>
                      <th>Error</th>
                      <th>Created</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for job in recentFailedJobs %}
                    <tr>
                      <td><code>#{{ job.id }}</code></td>
                      <td><span class="badge bg-secondary">{{ job.queue }}</span></td>
                      <td>
                        {% if job.status == 'failed' %}
                          <span class="badge bg-danger">Failed</span>
                        {% elif job.status == 'retrying' %}
                          <span class="badge bg-warning">Retrying</span>
                        {% else %}
                          <span class="badge bg-success">Completed</span>
                        {% endif %}
                      </td>
                      <td>{{ job.attempts }}/{{ job.max_attempts }}</td>
                      <td>
                        <small class="text-muted">
                          {% if job.error and job.error.length > 50 %}
                            {{ job.error.substring(0, 50) }}...
                          {% else %}
                            {{ job.error or 'No error message' }}
                          {% endif %}
                        </small>
                      </td>
                      <td>
                        <small>
                          {% if job.created_at %}
                            {{ job.created_at | formatDateTime }}
                          {% else %}
                            -
                          {% endif %}
                        </small>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <div class="text-center mt-3">
                <a href="/admin/queue/failed" class="btn btn-outline-primary">
                  View All Failed Jobs
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body text-center py-4">
              <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
              <h5>No Failed Jobs</h5>
              <p class="text-muted">All jobs are processing successfully!</p>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}