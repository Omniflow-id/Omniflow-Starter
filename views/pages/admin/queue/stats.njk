{% extends "layout/masterLayout.njk" %}

{% block title %}{{ t('pageTitle') }}{% endblock %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">{{ t('pageTitle') }}</h1>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item"><a href="/admin">{{ t('sidebar.dashboard') }}</a></li>
      <li class="breadcrumb-item active">{{ t('pageTitle') }}</li>
    </ol>
    <div>
      <a href="/admin/queue/failed" class="btn btn-outline-secondary">
        <i class="fas fa-exclamation-triangle me-1"></i>{{ t('tabs.failedJobs') }}
      </a>
    </div>
  </div>

  <!-- Connection Status -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-server me-1"></i>
          {{ t('stats.connectionStatus') }}
        </div>
        <div class="card-body">
          {% if connectionStatus.connected %}
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-success me-2">
              <i class="fas fa-check-circle me-1"></i>{{ t('stats.connected') }}
            </span>
          </div>
          <p class="mb-0">
            <strong><i class="fas fa-toggle-on me-1"></i>{{ t('labels.status') }}:</strong><br />
            <span class="text-success">{{ t('messages.rabbitmqReady') }}</span>
          </p>
          {% else %}
          <div class="d-flex align-items-center mb-3">
            <span class="badge bg-danger me-2">
              <i class="fas fa-times-circle me-1"></i>{{ t('stats.disconnected') }}
            </span>
          </div>
          <div class="alert alert-warning mb-0">
            <i class="fas fa-exclamation-triangle me-1"></i>
            {% if connectionStatus.isReconnecting %}
              {{ t('messages.reconnecting') }} ({{ connectionStatus.reconnectAttempt }}/10)
            {% else %}
              {{ t('messages.rabbitmqFailed') }}
            {% endif %}
          </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-chart-bar me-1"></i>
          {{ t('stats.title') }}
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-danger mb-1">{{ stats.failed or 0 }}</h3>
                <p class="text-muted small mb-0">{{ t('stats.failed') }}</p>
              </div>
            </div>
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-warning mb-1">{{ stats.retrying or 0 }}</h3>
                <p class="text-muted small mb-0">{{ t('stats.retrying') }}</p>
              </div>
            </div>
            <div class="col-4">
              <div class="text-center">
                <h3 class="text-success mb-1">{{ stats.completed or 0 }}</h3>
                <p class="text-muted small mb-0">{{ t('stats.completed') }}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Queue Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <i class="fas fa-cogs me-1"></i>
          {{ t('pageTitle') }}
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
              <div class="card bg-light">
                <div class="card-body text-center p-3">
                  <h6 class="card-title text-primary mb-3">
                    <i class="fas fa-play me-1"></i>{{ t('actions.sendTest') }}
                  </h6>
                  <form method="post" action="/admin/queue/test" class="mb-0">
                    {{ csrfField() | safe }}
                    <button
                      type="submit"
                      class="btn btn-primary btn-sm w-100"
                      {% if not connectionStatus.connected %}disabled{% endif %}
                    >
                      <i class="fas fa-play me-1"></i>{{ t('buttons.sendTest') }}
                    </button>
                  </form>
                  <small class="text-muted mt-2 d-block">
                    {{ t('labels.testJobDescription') }}
                  </small>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body text-center p-3">
                  <h6 class="card-title text-warning mb-3">
                    <i class="fas fa-redo me-1"></i>{{ t('actions.retryAll') }}
                  </h6>
                  <form method="post" action="/admin/queue/retry" class="mb-0">
                    {{ csrfField() | safe }}
                    <button
                      type="submit"
                      class="btn btn-warning btn-sm w-100"
                      {% if stats.failed == 0 %}disabled{% endif %}
                    >
                      <i class="fas fa-redo me-1"></i>{{ t('buttons.retry') }}
                    </button>
                  </form>
                  <small class="text-muted mt-2 d-block">
                    {{ t('labels.retryDescription') }}
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

      <!-- Recent Failed Jobs -->
      {% if recentFailedJobs and recentFailedJobs.length > 0 %}
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">{{ t('labels.recentFailed') }}</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>{{ t('table.id') }}</th>
                      <th>{{ t('table.queue') }}</th>
                      <th>{{ t('table.status') }}</th>
                      <th>{{ t('table.attempts') }}</th>
                      <th>{{ t('table.error') }}</th>
                      <th>{{ t('table.createdAt') }}</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for job in recentFailedJobs %}
                    <tr>
                      <td><code>#{{ job.id }}</code></td>
                      <td><span class="badge bg-secondary">{{ job.queue }}</span></td>
                      <td>
                        {% if job.status == 'failed' %}
                          <span class="badge bg-danger">{{ t('status.failed') }}</span>
                        {% elif job.status == 'retrying' %}
                          <span class="badge bg-warning">{{ t('status.retrying') }}</span>
                        {% else %}
                          <span class="badge bg-success">{{ t('status.completed') }}</span>
                        {% endif %}
                      </td>
                      <td>{{ job.attempts }}/{{ job.max_attempts }}</td>
                      <td>
                        <small class="text-muted">
                          {% if job.error and job.error.length > 50 %}
                            {{ job.error.substring(0, 50) }}...
                          {% else %}
                            {{ job.error or t('labels.noError') }}
                          {% endif %}
                        </small>
                      </td>
                      <td>
                        <small>
                          {% if job.created_at %}
                            {{ job.created_at | formatDateTime }}
                          {% else %}
                            -
                          {% endif %}
                        </small>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <div class="text-center mt-3">
                <a href="/admin/queue/failed" class="btn btn-outline-primary">
                  {{ t('labels.viewAllFailed') }}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body text-center py-4">
              <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
              <h5>{{ t('labels.noFailedJobs') }}</h5>
              <p class="text-muted">{{ t('messages.allSuccess') }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
