{% extends "layout/masterLayout.njk" %}

{% block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4">{{ t('pageTitle') }}</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/admin">{{ t('breadcrumb.dashboard') }}</a></li>
    <li class="breadcrumb-item active">{{ t('breadcrumb.profile') }}</li>
  </ol>

  <div class="row">
    <!-- Left Column: Profile Card -->
    <div class="col-lg-4">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-user me-1"></i>
          {{ t('sections.profile.title') }}
        </div>
        <div class="card-body text-center">
          <div class="mb-3">
            <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle" 
                 style="width: 100px; height: 100px; font-size: 2.5rem;">
              {{ (userProfile.full_name[0] if userProfile.full_name else userProfile.username[0]) | upper }}
            </div>
          </div>
          <h5 class="fw-bold mb-1">{{ userProfile.full_name or userProfile.username }}</h5>
          <p class="text-muted mb-3">@{{ userProfile.username }}</p>

          <div class="mb-3">
             {% set roleClass = {
              'Admin': 'bg-danger',
              'Manager': 'bg-warning text-dark',
              'User': 'bg-info'
            } %}
            <span class="badge {{ roleClass[userProfile.role] or 'bg-secondary' }}">
              {{ userProfile.role }}
            </span>
          </div>

          <div class="small text-muted">
            {{ t('sections.profile.memberSince') }} {{ userProfile.created_at | date("DD MMMM YYYY") }}
          </div>
        </div>
      </div>

       <!-- Quick Actions -->
       <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-bolt me-1"></i>
          {{ t('sections.quickActions.title') }}
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/admin/change-password" class="btn btn-primary">
               <i class="fas fa-key me-2"></i>{{ t('sections.quickActions.changePassword') }}
            </a>
            <button class="btn btn-outline-secondary" onclick="alert('{{ t(\'sections.quickActions.updateComingSoon\') }}')">
               <i class="fas fa-user-edit me-2"></i>{{ t('sections.quickActions.editProfile') }}
            </button>
             <a href="/admin/logout" class="btn btn-danger">
               <i class="fas fa-sign-out-alt me-2"></i>{{ t('sections.quickActions.logout') }}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column: Detailed Info -->
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-header">
          <i class="fas fa-info-circle me-1"></i>
          {{ t('sections.info.title') }}
        </div>
        <div class="card-body">
          <div class="row g-3">
            <!-- Full Name -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon bg-primary bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-user text-primary"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.fullName') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <span class="fw-semibold">{{ userProfile.full_name or t('sections.info.notProvided') }}</span>
                </div>
              </div>
            </div>

            <!-- Username -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon bg-info bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-at text-info"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.username') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <span class="fw-semibold">@{{ userProfile.username }}</span>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-start mb-2">
                  <div class="info-icon bg-success bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-envelope text-success"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.email') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <div class="d-flex align-items-center gap-2">
                    <span class="fw-semibold">{{ userProfile.email }}</span>
                    <button class="btn btn-sm btn-outline-secondary py-0" type="button" onclick="copyToClipboard('{{ userProfile.email }}')" title="{{ t('sections.info.copyEmail') }}">
                      <i class="fas fa-copy small"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Account ID -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon bg-secondary bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-hashtag text-secondary"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.accountId') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <span class="fw-semibold">#{{ userProfile.id }}</span>
                </div>
              </div>
            </div>

            <!-- Role -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon bg-warning bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-user-tag text-warning"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.role') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <span class="badge {{ roleClass[userProfile.role] or 'bg-secondary' }}">{{ userProfile.role }}</span>
                </div>
              </div>
            </div>

            <!-- Status -->
            <div class="col-md-6">
              <div class="info-item p-3 rounded bg-light h-100">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon {{ 'bg-success bg-opacity-10' if userProfile.is_active else 'bg-danger bg-opacity-10' }} rounded p-2 me-3">
                    <i class="fas fa-circle {{ 'text-success' if userProfile.is_active else 'text-danger' }}"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.status') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  {% if userProfile.is_active %}
                    <span class="badge bg-success">{{ t('sections.profile.activeAccount') }}</span>
                  {% else %}
                    <span class="badge bg-danger">{{ t('sections.profile.inactiveAccount') }}</span>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Member Since -->
            <div class="col-12">
              <div class="info-item p-3 rounded bg-light">
                <div class="d-flex align-items-center mb-2">
                  <div class="info-icon bg-dark bg-opacity-10 rounded p-2 me-3">
                    <i class="fas fa-calendar-alt text-dark"></i>
                  </div>
                  <div>
                    <small class="text-muted text-uppercase small fw-bold">{{ t('sections.info.memberSince') }}</small>
                  </div>
                </div>
                <div class="ps-5">
                  <span class="fw-semibold">{{ userProfile.created_at | date("DD MMMM YYYY, HH:mm:ss") }}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Toast for copy functionality -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="copyToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
         <i class="fas fa-check-circle me-2"></i>{{ t('toast.message') }}
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    const toast = new bootstrap.Toast(document.getElementById('copyToast'));
    toast.show();
  }).catch(function(err) {
    console.error('Failed to copy: ', err);
    alert('{{ t(\'toast.fail\') }}');
  });
}
</script>
{% endblock %}
